	          <key group="default" id="AB06" keysym="0x10020AC" label="€"/>
	          <key group="default" id="AB07" keysym="0x100002C" label=","/>
	          <key group="default" id="AB08" keysym="0x100003B" label=";"/>
	          <key group="default" id="AB09" keysym="0x100007C" label="|"/>

	          <key button="true" group="label" id="hide" label="Exit" svg_id="LCTL"/>
	          <key button="true" group="label" id="move" label="Move" svg_id="LWIN"/>
	          <key button="true" group="label" id="layer2" label="Symbols" svg_id="LALT"/>

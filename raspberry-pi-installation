#!/bin/bash

# Installation script for minimal desktop environment.

# TODO: Check return values (https://google.github.io/styleguide/shellguide.html#s8.1-checking-return-values)!

if ! sudo true; then
  exit 1
fi

sudo dpkg-reconfigure tzdata

sudo apt-get update
sudo apt-get --yes upgrade

PACKAGES=(
  bc
  fbpanel
  feh
  file
  firefox-esr
  gawk
  git
  numix-gtk-theme
  numix-icon-theme
  onboard
  openbox
  rpd-wallpaper
  scrot
  vim
  xorg
  xterm
)
sudo apt-get --yes install "${PACKAGES[@]}"

sudo apt-get --yes autoremove
sudo apt-get --yes autoclean

sudo mkdir --parents "/usr/share/fonts/opentype/"
sudo git clone --branch release --depth 1 https://github.com/adobe-fonts/source-code-pro.git "/usr/share/fonts/opentype/source-code-pro"
sudo git clone --branch release --depth 1 https://github.com/adobe-fonts/source-sans.git "/usr/share/fonts/opentype/source-sans"
sudo git clone --branch release --depth 1 https://github.com/adobe-fonts/source-serif.git "/usr/share/fonts/opentype/source-serif"
sudo fc-cache -f -v "/usr/share/fonts/opentype/"

sudo tee /etc/vimrc <<- EOF
	runtime! archlinux.vim
	let skip_defaults_vim=1
	set expandtab
	set ignorecase
	set smartcase
	set shiftwidth=4
	set softtabstop=4
	set tabstop=4
	syntax on
EOF
sudo update-alternatives --set editor /usr/bin/vim.basic

sudo tee /etc/X11/xorg.conf.d/90-default.conf <<-EOF
	Section "ServerFlags"
	    Option "DontVTSwitch" "true"
	EndSection

	Section "ServerLayout"
	    Identifier "Display off"
	    Option "StandbyTime" "0"
	    Option "SuspendTime" "0"
	    Option "OffTime" "0"
	    Option "BlankTime" "0"
	EndSection
EOF

sudo mkdir --parents /etc/gtk-2.0/
sudo tee /etc/gtk-2.0/gtkrc <<-EOF
	gtk-theme-name = "Numix"
	gtk-icon-theme-name = "Numix"
	gtk-font-name = "Source Sans 3 12"
EOF
sudo mkdir --parents /etc/gtk-3.0/
sudo tee /etc/gtk-3.0/settings.ini <<-EOF
	[Settings]
	gtk-theme-name = Numix
	gtk-icon-theme-name = Numix
	gtk-font-name = Source Sans 3 12
EOF

mkdir --parents "${HOME}/.config/openbox/"
tee "${HOME}/.config/openbox/autostart" <<-EOF
	xrandr --auto
	feh --bg-scale /usr/share/rpd-wallpaper/sand.jpg
	fbpanel &
	onboard &
EOF
tee "${HOME}/.config/openbox/menu.xml" <<-EOF
	<?xml version="1.0" encoding="UTF-8"?>
	<openbox_menu>
	  <menu id="desktop" label="Auf zum Atem!">
	    <item label="Terminal">
	      <action name="Execute"><command>xterm</command></action>
	    </item>
	  </menu>
	</openbox_menu>
EOF
tee "${HOME}/.config/openbox/rc.xml" <<-EOF
	<?xml version="1.0" encoding="UTF-8"?>
	<openbox_config>
	  <theme>
	    <name>Numix</name>
	    <font place="ActiveWindow">
	      <name>Source Sans 3</name>
	      <size>14</size>
	      <weight>Bold</weight>
	    </font>
	    <font place="InactiveWindow">
	      <name>Source Sans 3</name>
	      <size>14</size>
	      <weight>Bold</weight>
	    </font>
	    <font place="MenuHeader">
	      <name>Source Sans 3</name>
	      <size>16</size>
	      <weight>Normal</weight>
	    </font>
	    <font place="MenuItem">
	      <name>Source Sans 3</name>
	      <size>16</size>
	      <weight>Normal</weight>
	    </font>
	    <titleLayout>LIMC</titleLayout>
	  </theme>
	  <desktops>
	    <number>1</number>
	    <firstdesk>1</firstdesk>
	    <names>
	      <name>Auf zum Atem!</name>
	    </names>
	  </desktops>
	  <keyboard>
	    <keybind key="W-Return">
	      <action name="Execute"><command>xterm</command></action>
	    </keybind>
	    <keybind key="W-Up">
	      <action name="Maximize"/>
	    </keybind>
	    <keybind key="W-Down">
	      <action name="Unmaximize"/>
	    </keybind>
	    <keybind key="W-Left">
	      <action name="Unmaximize"/>
	      <action name="MoveResizeTo">
	        <x>0</x>
	        <y>0</y>
	        <height>100%</height>
	        <width>50%</width>
	      </action>
	    </keybind>
	    <keybind key="W-Right">
	      <action name="Unmaximize"/>
	      <action name="MoveResizeTo">
	        <x>-0</x>
	        <y>0</y>
	        <height>100%</height>
	        <width>50%</width>
	      </action>
	    </keybind>
	    <keybind key="Print">
	      <action name="Execute"><command>scrot "%Y-%m-%d-%H-%M-%S.png"</command></action>
	    </keybind>
	  </keyboard>
	  <mouse>
	    <context name="Root">
	      <mousebind button="Right" action="Press">
	        <action name="ShowMenu">
	          <menu>desktop</menu>
	        </action>
	      </mousebind>
	    </context>
	    <context name="Titlebar">
	      <mousebind button="Left" action="Press">
	        <action name="Focus"/>
	        <action name="Raise"/>
	      </mousebind>
	      <mousebind button="Left" action="Drag">
	        <action name="Move"/>
	      </mousebind>
	      <mousebind button="Left" action="DoubleClick">
	        <action name="ToggleMaximize"/>
	      </mousebind>
	    </context>
	    <context name="Top">
	      <mousebind button="Left" action="Press">
	        <action name="Focus"/>
	        <action name="Raise"/>
	      </mousebind>
	      <mousebind button="Left" action="Drag">
	        <action name="Resize"><edge>top</edge></action>
	      </mousebind>
	    </context>
	    <context name="Left">
	      <mousebind button="Left" action="Press">
	        <action name="Focus"/>
	        <action name="Raise"/>
	      </mousebind>
	      <mousebind button="Left" action="Drag">
	        <action name="Resize"><edge>left</edge></action>
	      </mousebind>
	    </context>
	    <context name="Right">
	      <mousebind button="Left" action="Press">
	        <action name="Focus"/>
	        <action name="Raise"/>
	      </mousebind>
	      <mousebind button="Left" action="Drag">
	        <action name="Resize"><edge>right</edge></action>
	      </mousebind>
	    </context>
	    <context name="Bottom">
	      <mousebind button="Left" action="Press">
	        <action name="Focus"/>
	        <action name="Raise"/>
	      </mousebind>
	      <mousebind button="Left" action="Drag">
	        <action name="Resize"><edge>bottom</edge></action>
	      </mousebind>
	    </context>
	    <context name="TRCorner BRCorner TLCorner BLCorner">
	      <mousebind button="Left" action="Press">
	        <action name="Focus"/>
	        <action name="Raise"/>
	      </mousebind>
	      <mousebind button="Left" action="Drag">
	        <action name="Resize"/>
	      </mousebind>
	    </context>
	    <context name="Iconify">
	      <mousebind button="Left" action="Press">
	        <action name="Focus"/>
	        <action name="Raise"/>
	      </mousebind>
	      <mousebind button="Left" action="Click">
	        <action name="Iconify"/>
	      </mousebind>
	    </context>
	    <context name="Maximize">
	      <mousebind button="Left" action="Press">
	        <action name="Focus"/>
	        <action name="Raise"/>
	      </mousebind>
	      <mousebind button="Left" action="Click">
	        <action name="ToggleMaximize"/>
	      </mousebind>
	    </context>
	    <context name="Close">
	      <mousebind button="Left" action="Press">
	        <action name="Focus"/>
	        <action name="Raise"/>
	      </mousebind>
	      <mousebind button="Left" action="Click">
	        <action name="Close"/>
	      </mousebind>
	    </context>
	    <context name="Client">
	      <mousebind button="Left" action="Press">
	        <action name="Focus"/>
	        <action name="Raise"/>
	      </mousebind>
	      <mousebind button="Middle" action="Press">
	        <action name="Focus"/>
	        <action name="Raise"/>
	      </mousebind>
	      <mousebind button="Right" action="Press">
	        <action name="Focus"/>
	        <action name="Raise"/>
	      </mousebind>
	    </context>
	  </mouse>
	  <applications>
	    <application class="Firefox*">
	      <decor>no</decor>
	     </application>
	  </applications>
	</openbox_config>
EOF

mkdir --parents "${HOME}/.config/fbpanel/"
tee "${HOME}/.config/fbpanel/default" <<-EOF
	Global {
	    allign = center
	    autohide = false
	    edge = bottom
	    roundcorners = false
	    setdocktype = true
	    setpartialstrut = true
	    transparent = false
	}

	Plugin {
	    type = menu
	    config {
	        iconsize = 32
	        icon = open-menu-symbolic
	        item {
	            name = Firefox
	            icon = firefox-esr
	            action = firefox-esr
	        }
	        item {
	            name = Terminal
	            icon = terminal
	            action = xterm
	        }
	        separator {
	        }
	        item {
	            name = Reboot
	            icon = gnome-session-reboot
	            action = sudo reboot
	        }
	        item {
	            name = Shutdown
	            icon = gnome-session-halt
	            action = sudo shutdown -h now
	        }
	    }
	}

	Plugin {
	    type = taskbar
	    expand = true
	    config {
	        showmapped    = true
	        showalldesks  = true
	        tooltips = false
	        iconsonly = false
	        maxtaskwidth = 200
	    }
	}

	Plugin {
	    type = tclock
	    config {
	        ClockFmt = %R
	        ShowCalendar = false
	        ShowTooltip = false
	    }
	}
EOF

mkdir --parents "${HOME}/.config/onboard/"
tee "${HOME}/.config/onboard/onboard-defaults.conf" <<-EOF
	[main]
	layout=Flat
	theme=Flat
	show-status-icon=False
	show-tooltips=False
	start-minimized=True

	[window]
	force-to-top=True

	[window.landscape]
	height=380
	width=1200

	[icon-palette]
	in-use=True

	[icon-palette.landscape]
	height=100
	width=100
EOF

mkdir --parents "${HOME}/.local/share/onboard/layouts/"
tee "${HOME}/.local/share/onboard/layouts/Flat.onboard" <<-EOF
	<?xml version="1.0" encoding="utf-8"?>
	<keyboard format="3.2" id="Flat" section="system" summary="Auf zum Atem!">
	  <box border="0.5" orientation="vertical" spacing="1.5">
	    <box>
	      <panel>
	        <panel filename="/usr/share/onboard/layouts/Small-Alpha.svg" layer="letters">
	          <key action="single-stroke" group="label" id="ESC" keycode="9" label="Escape"/>
	          <key group="default" id="AD01" keycode="24"/>
	          <key group="default" id="AD02" keycode="25"/>
	          <key group="default" id="AD03" keycode="26"/>
	          <key group="default" id="AD04" keycode="27"/>
